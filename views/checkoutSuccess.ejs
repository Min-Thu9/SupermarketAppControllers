<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Payment Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .invoice-header {
      border-bottom: 2px solid #dee2e6;
      padding-bottom: 10px;
      margin-bottom: 20px;
    }
    .table thead {
      background-color: #343a40;
      color: white;
    }
    .table tbody tr:hover {
      background-color: #f1f3f5;
    }
    .btn-group-custom {
      display: flex;
      gap: 10px;
      flex-wrap: wrap;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-sm bg-dark navbar-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/search">Search</a>
          </li>
          <li>
            <form class="d-flex" method="GET" action="/search">
              <input class="form-control me-2" type="text" name="q" placeholder="Search by name" required>
              <button class="btn btn-primary" type="submit">Search</button>
            </form>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">ðŸ›’ View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container my-5">
    <h2 class="invoice-header">Payment Invoice</h2>
    <p class="fs-5">Thank you for your payment, <strong><%= user ? user.username : 'User' %></strong>!</p>

    <div class="table-responsive">
      <table class="table table-bordered align-middle text-center">
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let grandTotal = 0; cart.forEach(item => { 
               const total = item.price * item.quantity;
               grandTotal += total;
          %>
            <tr>
              <td class="text-start"><%= item.productName %></td>
              <td><%= item.quantity %></td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td>$<%= total.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3" class="text-end"><strong>Grand Total</strong></td>
            <td><strong>$<%= grandTotal.toFixed(2) %></strong></td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="btn-group-custom">
      <a href="/shopping" class="btn btn-outline-secondary">Continue Shopping</a>
      <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
