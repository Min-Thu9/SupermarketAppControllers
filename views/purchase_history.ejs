<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Purchase History</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .card-custom {
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .table thead th {
      background-color: #343a40 !important;
      color: #fff !important;
    }
    .navbar-brand {
      letter-spacing: 0.5px;
    }
  </style>
</head>

<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">Supermarket App</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navMenu">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shopping</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- MAIN CONTENT -->
  <div class="container my-5">
    <div class="card card-custom p-4">
      <h2 class="mb-4">
        <span class="text-primary">Purchase History</span> for <%= user.username %>
      </h2>

      <% if (orders.length === 0) { %>
        <div class="alert alert-info text-center py-3">
          You have not made any purchases yet.
        </div>
      <% } else { %>

        <div class="table-responsive">
          <table class="table table-bordered align-middle">
            <thead>
              <tr>
                <th>Order #</th>
                <th>Date</th>
                <th>Product</th>
                <th>Qty</th>
                <th>Price (each)</th>
                <th>Total</th>
              </tr>
            </thead>

            <tbody>
              <% orders.forEach(order => { 
                   order.items.forEach(item => { %>
                <tr>
                  <td><%= order.id %></td>
                  <td><%= new Date(order.created_at).toLocaleString() %></td>
                  <td><%= item.productName %></td>
                  <td><%= item.quantity %></td>
                  <td>$<%= Number(item.price).toFixed(2) %></td>
                  <td>$<%= (Number(item.price) * Number(item.quantity)).toFixed(2) %></td>
                </tr>
              <% }) }) %>
            </tbody>
          </table>
        </div>

      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
