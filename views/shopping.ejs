<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body {
      background: linear-gradient(135deg, #e0f7fa, #ffffff);
      font-family: 'Poppins', sans-serif;
    }
    .hero {
      text-align: center;
      padding: 60px 0;
    }
    .hero h2 {
      font-weight: 700;
      color: #333;
    }
    .hero p {
      color: #666;
    }
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      transition: transform 0.2s ease-in-out;
    }
    .card:hover {
      transform: translateY(-5px);
    }

  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/search">Search</a>
          </li>
          <li>
          <form class="d-flex" method="GET" action="/search">
            <input class="form-control me-2" type="text" name="q" placeholder="Search by name" required>
            <button class="btn btn-primary" type="submit">Search</button>
          </form>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">ðŸ›’ View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <section class="hero">
    <h2>Welcome, <%= user.username %>!</h2>
    <p>Find great deals and shop your favorite products.</p>
  </section>

  <div class="container pb-5">
    <div class="row g-4">
      <% for(let i=0; i < products.length; i++) { %>
        <div class="col-md-4">
          <div class="card h-100 text-center p-3">
            <img src="images/<%= products[i].image %>" class="card-img-top mx-auto" style="width: 60%; border-radius: 10px;">
            <div class="card-body">
              <h5 class="card-title fw-semibold"><%= products[i].productName %></h5>
              <p class="text-muted">$<%= products[i].price.toFixed(2) %></p>
             <% if (products[i].quantity > 0) { %>
                <form action="/add-to-cart/<%= products[i].id %>" method="POST">
                  <select class="form-select mb-2" name="quantity" style="max-width: 100px; margin: 0 auto;">
                    <% for (let q = 1; q <= Math.min(5, products[i].quantity); q++) { %>
                      <option value="<%= q %>"><%= q %></option>
                    <% } %>
                  </select>
                  <button type="submit" class="btn btn-secondary w-100">Add to Cart</button>
                </form>
              <% } else { %>
                <div class="alert alert-warning py-1 my-2">Out of Stock</div>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
