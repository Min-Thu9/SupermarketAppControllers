<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Customer Spending - Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="/">Supermarket App</a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/inventory">Inventory</a></li>
          <li class="nav-item"><a class="nav-link" href="/addProduct">Add Product</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5">
    <h2 class="mb-4">Amount Spent by Each Customer</h2>
    <% if (customers.length === 0) { %>
      <div class="alert alert-info">No customer orders found.</div>
    <% } else { %>
      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
          <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Total Amount Spent</th>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach(cust => { %>
            <tr>
              <td><%= cust.id %></td>
              <td><%= cust.username %></td>
              <td>$<%= Number(cust.totalSpent).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
  
<div class="d-flex justify-content-center my-4">
  <a href="/inventory" class="btn btn-secondary">Back to Inventory</a>
</div>

</body>
</html>